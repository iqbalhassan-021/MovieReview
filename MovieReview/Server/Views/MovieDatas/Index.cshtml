@model IEnumerable<MovieReview.Server.Model.MovieData>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieRating)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieName">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovieName">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
