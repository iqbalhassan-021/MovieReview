@page "/MovieReviews"

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/NewCss/Style.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Reviews</title>
</head>

     <NavBar></NavBar>
    <div class="desccontainer">
     
        <div class="image-container">
          <img src="/Assets/download.jpg" alt="Image">
        </div>
        <h1>Movie Name</h1>
        <form>
          <div class="form-group">
            <label for="description">Your Review:</label>
            <input type="text" id="description" placeholder="Enter description">
            <label for="description">Your Rating:</label>
            <input type="number" id="rating" placeholder="0/10">
            
          </div>
          <input type="submit" value="Upload">
        </form>
      </div>
      <div class="tablecontainer">
        <h1>Movie Reviews</h1>
        <table>
          <thead>
            <tr>
              <th>Username</th>
              <th>Movie Rating</th>
              <th>Movie Description</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>John</td>
              <td>4.5</td>
              <td>A captivating thriller with unexpected twists.</td>
            </tr>
            <tr>
              <td>Jane</td>
              <td>3.8</td>
              <td>An emotional drama that leaves you reflecting.</td>
            </tr>
            <tr>
              <td>Mike</td>
              <td>4.2</td>
              <td>A hilarious comedy that will keep you laughing.</td>
            </tr>
          </tbody>
        </table>
      </div>
    
     <Footer></Footer>

